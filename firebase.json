{
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  },
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/createBooking",
        "function": "createBooking"
      },
      {
        "source": "/cancelBooking",
        "function": "cancelBooking"
      },
      {
        "source": "/rebookBooking",
        "function": "rebookBooking"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules"
  }
}
